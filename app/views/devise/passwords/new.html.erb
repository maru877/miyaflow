<div class="container">
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <div class="password-title">
        <h2>パスワード再発行</h2><br />
      </div>
      <div class="password">
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
          <%= devise_error_messages! %>

          <div class="field">
            <%= f.email_field :email, class: "form-control", autofocus: true, placeholder: 'ご登録のメールアドレス' %><br />
          </div>

          <div class="actions">
            <%= f.submit "パスワードを再発行する", class: "btn btn-default" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
